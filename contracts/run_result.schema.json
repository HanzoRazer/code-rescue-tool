{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "run_result_v1",
  "title": "RunResult v1",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_version", "run", "summary", "signals_snapshot", "findings_raw"],
  "properties": {
    "schema_version": { "type": "string", "const": "run_result_v1" },
    "run": {
      "type": "object",
      "additionalProperties": true,
      "required": ["run_id", "created_at", "tool_version", "engine_version", "signal_logic_version", "copy_version"],
      "properties": {
        "run_id": { "type": "string", "minLength": 1 },
        "project_id": { "type": "string" },
        "created_at": { "type": "string", "format": "date-time" },
        "tool_version": { "type": "string" },
        "engine_version": { "type": "string" },
        "signal_logic_version": { "type": "string" },
        "copy_version": { "type": "string" },
        "config": { "type": "object", "additionalProperties": true }
      }
    },
    "summary": {
      "type": "object",
      "additionalProperties": false,
      "required": ["vibe_tier", "confidence_score", "counts"],
      "properties": {
        "vibe_tier": { "type": "string", "enum": ["green", "yellow", "red"] },
        "confidence_score": { "type": "integer", "minimum": 0, "maximum": 100 },
        "counts": {
          "type": "object",
          "additionalProperties": false,
          "required": ["findings_total", "by_severity", "by_type"],
          "properties": {
            "findings_total": { "type": "integer", "minimum": 0 },
            "by_severity": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "info": { "type": "integer", "minimum": 0 },
                "low": { "type": "integer", "minimum": 0 },
                "medium": { "type": "integer", "minimum": 0 },
                "high": { "type": "integer", "minimum": 0 },
                "critical": { "type": "integer", "minimum": 0 }
              }
            },
            "by_type": { "type": "object", "additionalProperties": { "type": "integer", "minimum": 0 } }
          }
        }
      }
    },
    "signals_snapshot": {
      "type": "array",
      "items": { "$ref": "#/$defs/signal_snapshot" }
    },
    "findings_raw": {
      "type": "array",
      "items": { "$ref": "#/$defs/finding_raw" }
    },
    "artifacts": { "type": "object", "additionalProperties": true }
  },
  "$defs": {
    "signal_snapshot": {
      "type": "object",
      "additionalProperties": false,
      "required": ["signal_id", "type", "risk_level", "urgency", "evidence"],
      "properties": {
        "signal_id": { "type": "string", "minLength": 1 },
        "type": { "type": "string", "minLength": 1 },
        "risk_level": { "type": "string", "enum": ["green", "yellow", "red"] },
        "urgency": { "type": "string", "enum": ["optional", "recommended", "important"] },
        "title_key": { "type": "string" },
        "summary_key": { "type": "string" },
        "why_key": { "type": "string" },
        "action": {
          "type": "object",
          "additionalProperties": false,
          "required": ["urgency"],
          "properties": {
            "text_key": { "type": "string" },
            "urgency": { "type": "string", "enum": ["optional", "recommended", "important"] }
          }
        },
        "footer_key": { "type": "string" },
        "footer_icon_key": { "type": "string" },
        "button_context": { "type": "string" },
        "evidence": {
          "type": "object",
          "additionalProperties": false,
          "required": ["finding_ids", "summary"],
          "properties": {
            "finding_ids": {
              "type": "array",
              "minItems": 1,
              "items": { "type": "string" }
            },
            "summary": {
              "type": "object",
              "additionalProperties": true,
              "properties": {
                "swallowed_count": { "type": "integer", "minimum": 0 },
                "logged_count": { "type": "integer", "minimum": 0 },
                "mutable_default_count": { "type": "integer", "minimum": 0 },
                "module_mutable_count": { "type": "integer", "minimum": 0 },
                "global_keyword_count": { "type": "integer", "minimum": 0 }
              }
            },
            "primary_location": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "path": { "type": "string" },
                "line_start": { "type": "integer", "minimum": 1 },
                "line_end": { "type": "integer", "minimum": 1 }
              }
            }
          }
        }
      }
    },
    "finding_raw": {
      "type": "object",
      "additionalProperties": true,
      "required": ["finding_id", "type", "severity", "confidence", "location", "fingerprint"],
      "properties": {
        "finding_id": { "type": "string", "minLength": 1 },
        "type": { "type": "string", "minLength": 1 },
        "severity": { "type": "string", "enum": ["info", "low", "medium", "high", "critical"] },
        "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
        "message": { "type": "string" },
        "location": {
          "type": "object",
          "additionalProperties": false,
          "required": ["path", "line_start", "line_end"],
          "properties": {
            "path": { "type": "string" },
            "line_start": { "type": "integer", "minimum": 1 },
            "line_end": { "type": "integer", "minimum": 1 }
          }
        },
        "fingerprint": { "type": "string", "minLength": 1 },
        "snippet": { "type": "string" },
        "metadata": { "type": "object", "additionalProperties": true }
      }
    }
  }
}
